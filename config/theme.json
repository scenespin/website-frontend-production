{
  "theme": {
    "name": "ISE Screenwriter",
    "version": "1.0.0",
    "description": "Customizable theme configuration for ISE Screenwriter"
  },
  
  "colors": {
    "primary": {
      "main": "#0D9488",
      "hover": "#0F766E",
      "light": "#5EEAD4",
      "dark": "#115E59",
      "description": "Main accent color (teal)"
    },
    
    "background": {
      "main": "#FAFAFA",
      "card": "#FFFFFF",
      "surface": "#F7F7F8",
      "editor": "#FFFFFF",
      "description": "Background colors"
    },
    
    "text": {
      "primary": "#1F1F1F",
      "secondary": "#6B7280",
      "muted": "#9CA3AF",
      "inverse": "#FFFFFF",
      "description": "Text colors"
    },
    
    "border": {
      "light": "#F0F0F0",
      "main": "#E5E5E5",
      "dark": "#D1D5DB",
      "description": "Border colors"
    },
    
    "status": {
      "success": "#10B981",
      "warning": "#F59E0B",
      "error": "#EF4444",
      "info": "#3B82F6",
      "description": "Status indicator colors"
    }
  },
  
  "typography": {
    "fontFamily": {
      "editor": "'Courier Prime', 'Courier New', monospace",
      "ui": "-apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif",
      "description": "Font families"
    },
    
    "fontSize": {
      "editor": "16px",
      "editorMin": "12px",
      "editorMax": "24px",
      "ui": "14px",
      "heading": "20px",
      "description": "Font sizes"
    },
    
    "lineHeight": {
      "editor": "1.5",
      "tight": "1.25",
      "normal": "1.5",
      "relaxed": "1.75",
      "description": "Line heights"
    }
  },
  
  "spacing": {
    "editorPadding": {
      "mobile": "16px",
      "tablet": "32px",
      "desktop": "64px",
      "description": "Editor content padding"
    },
    
    "panelPadding": "16px",
    "buttonPadding": "12px 24px",
    "inputPadding": "8px 12px",
    "description": "Spacing values"
  },
  
  "components": {
    "editor": {
      "maxWidth": "800px",
      "minHeight": "100vh",
      "backgroundColor": "#FFFFFF",
      "textColor": "#1F1F1F",
      "cursorColor": "#0D9488",
      "selectionBackground": "#B2F5EA",
      "description": "Main editor component"
    },
    
    "agentDrawer": {
      "heightCollapsed": "48px",
      "heightDefault": "400px",
      "heightMin": "200px",
      "heightMax": "800px",
      "backgroundColor": "#FFFFFF",
      "borderColor": "#E5E5E5",
      "shadowColor": "rgba(0, 0, 0, 0.1)",
      "description": "AI Agent drawer component"
    },
    
    "toolbar": {
      "height": "48px",
      "backgroundColor": "#F7F7F8",
      "borderColor": "#E5E5E5",
      "buttonSize": "36px",
      "iconColor": "#6B7280",
      "iconHoverColor": "#1F1F1F",
      "description": "Editor toolbar (bottom-left buttons)"
    },
    
    "tabs": {
      "height": "40px",
      "backgroundColor": "#F7F7F8",
      "activeBackgroundColor": "#FFFFFF",
      "textColor": "#6B7280",
      "activeTextColor": "#1F1F1F",
      "borderColor": "#E5E5E5",
      "description": "Tab navigation"
    },
    
    "buttons": {
      "primary": {
        "backgroundColor": "#0D9488",
        "hoverBackgroundColor": "#0F766E",
        "textColor": "#FFFFFF",
        "borderRadius": "6px"
      },
      "secondary": {
        "backgroundColor": "#F7F7F8",
        "hoverBackgroundColor": "#E5E5E5",
        "textColor": "#1F1F1F",
        "borderRadius": "6px"
      },
      "description": "Button styles"
    }
  },
  
  "animations": {
    "transitionDuration": "300ms",
    "transitionEasing": "ease-in-out",
    "hoverScale": "1.02",
    "description": "Animation settings"
  },
  
  "breakpoints": {
    "mobile": "640px",
    "tablet": "768px",
    "desktop": "1024px",
    "wide": "1280px",
    "description": "Responsive breakpoints"
  },
  
  "features": {
    "enableAutoSave": true,
    "autoSaveInterval": 3000,
    "enableFocusMode": true,
    "enableKeyboardShortcuts": true,
    "enableSpellCheck": true,
    "description": "Feature toggles"
  }
}

